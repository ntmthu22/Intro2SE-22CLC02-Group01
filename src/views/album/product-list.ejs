  <%- include('../includes/general/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/general/navbar.ejs') %>
    <section style="background-color: white">
      <div class="container my-4">
        <% for (let i = 0; i < prods.length; i++) { %>
          <% if (i % 3 === 0) { %>
          <div class="row mb-4 mt-0">
            <% } %>
            <div class="col-sm-4">
              <div class="card">
                <div class="position-relative">
                  <img
                    src="/<%= prods[i].originalImageUrl %>"
                    class="card-img-top img-fluid"
                    style="height: 150px; object-fit: cover"
                  />
                  <a
                    href="#!"
                    class="position-absolute w-100 h-100"
                    style="
                      top: 0;
                      left: 0;
                      background-color: rgba(251, 251, 251, 0.15);
                    "
                  ></a>
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= prods[i].dateAndName.name %></h5>
                  <p class="card-text">
                    Created by <strong class="text-primary"><%= user.name %></strong> on <span class="text-primary"><%= prods[i].dateAndName.date %></span> 
                  </p>
                  <a type="button" href="/user/album/<%= prods[i]._id %>" class="btn btn-outline-primary">
                    See Detail
                  </a>
                </div>
              </div>
            </div>
          <% if ((i % 3 === 2) || (i === prods.length - 1)) { %>
          </div>
          <% } %>
        <% } %>
      </div>
      <div class="d-flex align-items-center justify-content-center mb-2">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="?page=1" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% if (currentPage !== 1 && previousPage !== 1) { %>
            <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
            <% } %>
            <% if (hasPreviousPage) { %>
              <% if (previousPage > 2) { %>
                <li class="page-item">
                  <a class="page-link">...</a>
                </li>
              <% } %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>"><%= previousPage %></a>
              </li>
            <% } %>
            <li class="page-item active">
              <a class="page-link" href="?page=<%= currentPage %>"><%= currentPage %></a>
            </li>
            <% if (hasNextPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= nextPage %>"><%= nextPage %></a>
              </li>
              <% if (lastPage - nextPage > 1) { %>
                <li class="page-item">
                  <a class="page-link">...</a>
                </li>
              <% } %>
            <% } %>
            <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a>
              </li>
            <% } %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= lastPage %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </section>
  </body>
</html>